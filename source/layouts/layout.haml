!!!5
%html{:lang => "en"}
	%head
		%meta{:charset => "utf-8"}
		%title= page_title
		%meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
		%meta{:content => "width=1024", :name => "viewport"}

		= stylesheet_link_tag "site"
	%body.impress-not-supported
		.fallback-message
			%p
				Your browser
				%strong doesn't support the features required
				, so you are presented with a simplified version of this presentation.
			%p
				For the best experience please use the latest
				%strong Chrome
				,
				%strong Safari
				or
				%strong Firefox
				browser.
		#impress
			= yield

		.hint
			%p Use a spacebar or arrow keys to navigate

		:coffeescript
			document.querySelector(".hint").innerHTML = "<p>Tap on the left or right to navigate</p>"  if "ontouchstart" of document.documentElement

		= javascript_include_tag "presentation"

		:coffeescript
			impress().init()